@startuml SpriteRendering

' =========================
'  Skin
' =========================

skinparam shadowing false
skinparam roundcorner 5
skinparam dpi 150

skinparam DefaultFontName "Inter"
skinparam DefaultFontSize 12
skinparam nodesep 80
skinparam classAttributeIconSize 0

skinparam class {
  BackgroundColor #F9F9F9
  BorderColor #BFBFBF
  FontColor #333333
}

skinparam Arrow {
  Color #9E9E9E
  Thickness 1
}

hide circle
hide empty members

' =========================
'  Classes
' =========================

' Subtitle for classes: 
' \n<size:10><i>(from model)</i></size>

interface SpriteRenderer <<Interface>> {
    getSprite(int frameCount, MapObjViewData objData) : Sprite
}

class SpriteRendererImpl {

}

interface ViewRenderer <<Interface>> {
    setCanvas(Canvas): void
    setContainer(Region): void
    renderAll(Collection<MapObjViewData>): void
    clean(): void
}

class ViewRendererImpl {

}

interface GameView <<Interface>> {

}

SpriteRendererImpl .up.|> SpriteRenderer
ViewRendererImpl .up.|> ViewRenderer
ViewRenderer -left-* SpriteRenderer
ViewRendererImpl -left-* SpriteRendererImpl
ViewRenderer -down-* GameView

@enduml