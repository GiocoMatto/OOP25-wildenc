@startuml Weapons

' =========================
'  Skin
' =========================

skinparam shadowing false
skinparam roundcorner 5
skinparam dpi 150

skinparam DefaultFontName "Inter"
skinparam DefaultFontSize 12
skinparam linetype ortho
skinparam nodesep 80
skinparam classAttributeIconSize 0

skinparam class {
  BackgroundColor #F9F9F9
  BorderColor #BFBFBF
  FontColor #333333
}

skinparam Arrow {
  Color #9E9E9E
  Thickness 1
}

hide circle
hide empty members

' =========================
'  Classes
' =========================

' Subtitle for classes: 
' \n<size:10><i>(from model)</i></size>
interface Weapon <<Interface>>{
    +attack(double deltaTime): Set<Projectile>
    +upgrade(): void
    +getName(): String
    +getStats(): WeaponStats
}

GenericWeapon .up.|> Weapon

class GenericWeapon {
}

PointerWeapon -up-|> GenericWeapon

class PointerWeapon {
    +setPosToHit(Supplier<Vector2d>) : void
}

WeaponFactory *-right- Weapon : << creates >>

interface WeaponFactory <<Interface>>{
  +createWeapon(Object... stats): Weapon
}

GenericFactory .up.|> WeaponFactory
GenericFactory *-right- GenericWeapon

class GenericFactory {
  +createWeapon(Object... stats): GenericWeapon
}

PointerFactory .up.|> WeaponFactory

class PointerFactory {
  +createWeapon(Object... stats): PointerWeapon
}

PointerWeapon -left-* PointerFactory

@enduml