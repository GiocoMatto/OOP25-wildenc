@startuml Projectiles

' =========================
'  Skin
' =========================

skinparam shadowing false
skinparam roundcorner 5
skinparam dpi 150

skinparam DefaultFontName "Inter"
skinparam DefaultFontSize 12
skinparam linetype ortho
skinparam classAttributeIconSize 0

skinparam class {
  BackgroundColor #F9F9F9
  BorderColor #BFBFBF
  FontColor #333333
}

skinparam Arrow {
  Color #9E9E9E
  Thickness 1
}

hide circle
hide empty members

' =========================
'  Classes
' =========================

' Subtitle for classes: 
' \n<size:10><i>(from model)</i></size>
interface Weapon <<Interface>>{
    +attack(double deltaTime): Set<Projectile>
    +upgrade(): void
    +getName(): String
    +getStats(): WeaponStats
}

GenericWeapon .up.|> Weapon

class GenericWeapon {
}

PointerWeapon -up-|> GenericWeapon

class PointerWeapon {
    +setPosToHit(Supplier<Vector2d>) : void
}

interface Projectile <<Interface>> {
    +getDamage(): double
    +isAlive(): boolean
    +getOwnerPosition(): Vector2dc
    +getOwnerName(): String
    +isImmortal(): boolean
}

class ConcreteProjectile {

}

class ProjectileStats {
  +setMultiplier(double newMult): void
  +getStat(ProjStatType type): double

}

ConcreteProjectile .up.|> Projectile
GenericWeapon *-right- ConcreteProjectile
PointerWeapon *-right- ConcreteProjectile
ConcreteProjectile *-right- ProjectileStats
Weapon *-right- Projectile : << creates >>

@enduml